<html>
    <head>
            <title>List of Authors</title>
            <style>
                /* General body styling */
                body {
                    font-family: 'Poppins', sans-serif;
                    margin: 0;
                    padding: 20px;
                    background-color: #f0f2f5;
                    color: #333;
                }

                h1 {
                    text-align: center;
                    color: #333;
                    font-size: 2.5em;
                    margin-bottom: 20px;
                    font-weight: 700;
                    letter-spacing: 1px;
                }

                /* Table styling */
                table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-bottom: 30px;
                    background-color: #fff;
                    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
                    border-radius: 10px;
                    overflow: hidden;
                }

                th, td {
                    padding: 20px;
                    text-align: left;
                }

                th {
                    background-color: #4A90E2;
                    color: white;
                    font-size: 1.2em;
                    letter-spacing: 0.5px;
                    text-transform: uppercase;
                }

                td {
                    font-size: 1.1em;
                    color: #555;
                }

                td img {
                    border-radius: 10px;
                    transition: transform 0.3s ease;
                }

                td img:hover {
                    transform: scale(1.05);
                }

                tr:nth-child(even) {
                    background-color: #f9f9f9;
                }

                tr:hover {
                    background-color: #f1f1f1;
                    transition: background-color 0.3s ease;
                }

                /* Table border */
                th, td {
                    border-bottom: 1px solid #ddd;
                }

                /* Footer styling */
                .footer {
                    margin-top: 30px;
                    text-align: center;
                    font-weight: 600;
                    color: #4A90E2;
                    font-size: 1.5em;
                }

                .footer h1 {
                    margin: 5px 0;
                }

                /* Button to view more */
                .view-more {
                    display: inline-block;
                    padding: 10px 20px;
                    background-color: #4A90E2;
                    color: white;
                    font-size: 1.2em;
                    text-transform: uppercase;
                    text-decoration: none;
                    border-radius: 5px;
                    transition: background-color 0.3s ease;
                }

                .view-more:hover {
                    background-color: #357ABD;
                    cursor: pointer;
                }

                /* Mobile responsiveness */
                @media screen and (max-width: 768px) {
                    th, td {
                        padding: 10px;
                    }

                    h1 {
                        font-size: 2em;
                    }

                    .footer {
                        font-size: 1.2em;
                    }

                    .view-more {
                        font-size: 1em;
                        padding: 8px 15px;
                    }
                }

                @media screen and (max-width: 600px) {
                    td img {
                        width: 80px;
                    }

                    th, td {
                        font-size: 0.9em;
                    }
                }
            </style>
            <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
        </head>

    <body>
        {% set nbrTotalBooks = 0 %}

        {% if authors is defined and authors is not empty %}
        <table>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Email</th>
                <th>Number of books</th>
            </tr>

            <tr {% for author in authors %}>
                {% set nbrTotalBooks = nbrTotalBooks + author.nbrBooks %}
                <td>{{author.authorName | upper}}</td>
                <td><img src="{{ asset(author.picture) }}" width=40%></td>
                <td>{{author.authorEmail}}</td>
                <td>{{author.nbrBooks}}</td>
            </tr {% endfor %}>
        </table>

        <h1>The number of authors : {{ authors | length }}</h1>

        <h1>The number of books of all authors combined is : {{ nbrTotalBooks }}</h1>

        {% else %}
            <h1>This table is not defined</h1>
        {% endif %}

        <center><a href="{{ path('app_home') }}">Home</a></center>
    </body>
</html>